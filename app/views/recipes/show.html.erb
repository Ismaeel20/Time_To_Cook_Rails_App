
<div class="d-flex gap-5" >
  <div class="recipes">
    <h1>Recipes</h1>
    <ul><% @recipes.each do |recipe|%>
          <li>
              <% if recipe.user_id == @recipe.id %>
              <strong><%= link_to recipe.name, recipe_path(recipe) %></strong>
              <% else %>
                <%= link_to recipe.name, recipe_path(recipe) %>
              <% end %>

              <% unless recipe.id == @recipe.id%>
                <%= link_to "delete", recipe_path(recipe), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
              <% end %>
              <%= link_to "edit", edit_recipe_path(recipe) %>
          </li>
        <% end %>
    </ul>

    <%= simple_form_for @new_recipe do |f|  %>
    <%= f.input :name %>
    <%= f.submit %>
    <% end %>
  </div>

  <div class="container">
    <h1>Your Recipe Timers</h1>
    <div class="timer-grid">
      <% @recipe.recipe_timers.each do |timer| %>
        <div class="timer-circle">
          <strong><%= timer.ingredient %></strong>
          <%= timer.time %>
          <a  id="recipe-delete" <%= link_to "delete", recipe_timer_path(timer), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>>
          <a id="edit-delete" <%= link_to "edit", edit_recipe_timer_path(timer) %>>
        </div>

      <% end %>



    </div>
    <div class="create">
    <%= simple_form_for [ @recipe, @new_timer ] do |f|  %>
        <%= f.input :ingredient %>
        <%= f.input :time %>
        <%= f.submit %>
    <% end %>
    <div>
  </div>
</div>
