<div>
  <h1>Recipes</h1>
  <ul><% @recipes.each do |recipe|%>
        <li>
            <% if recipe.user_id == @recipe.id %>
             <strong><%= link_to recipe.name, recipe_path(recipe) %></strong>
            <% else %>
              <%= link_to recipe.name, recipe_path(recipe) %>
            <% end %>

            <% unless recipe.id == @recipe.id%>
              <%= link_to "delete", recipe_path(recipe), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
            <% end %>
            <%= link_to "edit" %>
        </li>
      <% end %>
  </ul>

  <%= simple_form_for @new_recipe do |f|  %>
  <%= f.input :name %>
  <%= f.submit %>
  <% end %>
</div>
