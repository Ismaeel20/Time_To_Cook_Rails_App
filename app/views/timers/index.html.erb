<h1>Timers</h1>
<div class="search">
    <%= form_with url: timers_path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a timer"
  %>
 <div class="search-btn m-auto"><%= submit_tag "Search", class: "btn btn-primary" %></div>
<% end %>
</div>

<div class="container">
  <div class="timer-grid">

    <% @timers.each do |timer| %>
      <div data-controller="timers" class="timer-circle">
      <%# <div class="timer-circle"> %>
        <ul><%= timer.ingredient %>
          <p data-timers-target="button" data-action="click->timers#start"><%= timer.time_in_minutes %></p>
          <button> reset </button>
        <% if timer.user_id == current_user.id %>
          <%= link_to "delete", timer_path(timer), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, id: "recipe-delete" %>
          <%= link_to "edit", edit_timer_path(timer), id: "edit-delete" %>
        <% end %>
        </ul>
      </div>
    <% end %>
  </div>

  <%= simple_form_for @timer do |f| %>
    <%= f.input :ingredient %>
    <%= f.input :time %>
    <%= f.submit %>
  <% end %>
